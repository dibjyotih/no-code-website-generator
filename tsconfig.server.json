{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/server",
      "rootDir": "./backend",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2022",
      "esModuleInterop": true,
      "strict": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": ["backend/**/*"],
    "exclude": ["node_modules"]
  }